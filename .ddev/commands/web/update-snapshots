#!/bin/bash
## Description: Update generated JSON snapshots for test assertions
## Usage: update-snapshots
## Example: "ddev update-snapshots"
RED='\033[0;31m'
GREEN='\033[0;32m'
COLOR_OFF='\033[0m'

clear

echo -e "${RED}               (#########.            ################             ##########,
             (#############*          *##############,           ##############,
            ,################           ############           /################
            .##################           ########            ##################
             *##################(          .####            ###################
               (##################,                       ###################.
                 ###################                    /##################/
                  .##################(                .###################
                    /#################/              ###################
                      ################/            ###################,
                        #############(           *##################(
                         .##########            ###################
                           /######,           ##################,          .@(%@
                             /##,           (#############(. ${COLOR_OFF}




            ,@&      @@    .@@@@@*     ,@&     @@,  @@     &@#    .@&  .@@@@@@@@
             &@@*  @@@   @@@*   ,@@@   #@@     @@(  @@@   &@@@/   @@*  @@@
               @@@@@.   %@@       @@@  #@@     @@(   @@@ (@@ @@. @@(   @@@@@@@@,
                %@@     ,@@%     (@@.  (@@     @@/    @@&@@  .@@@@%    @@@
                (@@       %@@@@@@@%     *@@@@@@@,      @@@    /@@@     @@@@@@@@@."

echo "Updating snapshots..."

php bin/phpunit -d -update-snapshots

echo "Done!"
